@using BoardgameBank.Controllers;
@model AddGameViewModel

@{
    ViewBag.Title = "Add Game";
}

<!-- Add Game -->
<section id="addgame">
    <h3 class="centerthis">Add New Game</h3>
    <section id="form area">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.Label("Name:")
                @Html.TextBoxFor( x => x.GameName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Number of Players:")
                <div class="formcontainer">
                    <div id="playerCheck">

                        @foreach (var playercount in Model.AllPlayerCounts)
                        {
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="SelectedPlayerCounts" value="@playercount.Value"> @playercount.Value
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Play Time:")
                <select class="form-control" id="timeSelect" name="PlayTime">
                    <option selected>...</option>
                    <option>Quick</option>
                    <option>Medium</option>
                    <option>Long</option>
                </select>
            </div>
            <div class="form-group">
                @Html.Label("Categories:")
                @Html.ListBoxFor(x => x.Categories, Model.AllCategories, new { @class = "form-control", size = 8 })
            </div>
            <div class="form-group">
                @Html.Label("Rating:")
                <div class="formcontainer">
                    <div id="ratingRadios">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" name="SelectedRating" id="ratingOption1" value="1"> 1
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" name="SelectedRating" id="ratingOption2" value="2"> 2
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" name="SelectedRating" id="ratingOption3" value="3"> 3
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" name="SelectedRating" id="ratingOption4" value="4"> 4
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" name="SelectedRating" id="ratingOption5" value="5"> 5
                            </label>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary addgamebtn" value="ADD GAME">
                </div>
            </div>
        }

    </section>
</section>
