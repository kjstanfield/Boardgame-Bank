@using BoardgameBank.Models;
@model EditGameViewModel

@{
    ViewBag.Title = "Game Info";
}

  <!--Game Info -->
<section id=gameinfo>
    <div class="infobox">
        <h3>@Model.GameName</h3>
    </div>
    <div class="gameinfo">
        <section id="form area">

            @using (Html.BeginForm("Edit","Boardgames"))
            {
                <div class="form-group">
                    @Html.Label("Number of Players:")
                    <div class="formcontainer">
                        <div id="playerCheck">

                            @foreach (var playercount in Model.AllPlayerCounts)
                            {
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" name="SelectedPlayerCounts" value="@playercount.Value"> @playercount.Value
                                    </label>
                                </div>
                            }
                            </div>
                        </div>
                    </div>
                <div class="form-group">
                    @Html.Label("Play Time:")
                    <select class="form-control" id="PlayTime">
                        <option selected>...</option>
                        <option>Quick</option>
                        <option>Medium</option>
                        <option>Long</option>
                    </select>
                </div>
                <div class="form-group">
                    @Html.Label("Categories:")
                    @Html.ListBoxFor(x => x.Categories, Model.AllCategories, new { @class = "form-control", size = 8 })
                </div>
                <div class="form-group">
                    <label>Rating:</label>
                    <div class="formcontainer">
                        <div id="ratingRadios">
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="SelectedRating" id="newRatingOption1" value="1"> 1
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="SelectedRating" id="newRatingOption2" value="2"> 2
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="SelectedRating" id="newRatingOption3" value="3"> 3
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="SelectedRating" id="newRatingOption4" value="4"> 4
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="radio" name="SelectedRating" id="newRatingOption5" value="5"> 5
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary addgamebtn">EDIT</button>
                    </div>
                </div>
            }
        </section>
    </div>
</section>